<!-- TripsListScreen.xml -->

<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
  <ActionBar title="Trips" />
  <ListView id="tripsListView" items="{{ trips }}" itemTap="onItemTap">
    <ListView.itemTemplate>
      <StackLayout padding="20" borderBottomWidth="1" borderBottomColor="#ccc">
        <Label text="{{ title }}" />
        <Label text="{{ date }}" />
      </StackLayout>
    </ListView.itemTemplate>
  </ListView>
</Page>
